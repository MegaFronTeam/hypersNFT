mixin sFAQ()
	// start sFAQ
	+b.SECTION.sFAQ.section#sFAQ&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 FAQ
			h3 How to get $HYPERS
			+e.number-wrap
				+e.number-item-wrap--first
					+e.number-item Mint NFT
						+e.number 1
				+e.number-item-wrap--second
					+e.number-item Staking NFT
						+e.number 2
				+e.number-item-wrap--third
					+e.number-item Get $HYPERS
						+e.number 3
				+e.number-item-wrap--4
					+e.number-item Exchange $HYPERS for blue chip NFT
						+e.number 4
			+ddGroup()
				each item in sFAQ.ddGroup
					+ddGroupItem(`${item.title}`)
						each paragraph in item.content
							p!= paragraph
			.text-center
				+e.btn.btn.btn-outline-primary(href="https://twitter.com/hypersnfts") 
					+icon("twitter")
					| Join Community
		.paper-bg
			img(src="img/paper-bg-up.png", alt="")
	// end sFAQ

mixin ddGroup()
	//-родителю елементов .dd-group-js
	+b.dd-group.dd-group-js
		if block
			block
		else
			+ddGroupItem('вопрос1', 'active')
			+ddGroupItem('вопрос2')
			+ddGroupItem('вопрос3')

mixin ddGroupItem(txt, activeClasses='')
	//-хедеру и контенту => .dd-head-js, .dd-content-js
	//-!!! они должни вкладиваться в 1 контейнер(+e.item) header стилизируеться от етого контейнера, внутри хедера втавлять что душе угодно
	+e.item(class=activeClasses)
		+e.head.dd-head-js=txt
		+e.content.dd-content-js(class=activeClasses)
