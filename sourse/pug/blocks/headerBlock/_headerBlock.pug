mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		//- +e.bg-text
		//- 	img(src="img/svg/headerblock-bg.svg", alt="")
		+e.overflow-container
			+e.wrap-slider.d-none.d-lg-block
				+e.slider--js.swiper
					.swiper-wrapper
						mixin slide(x)
							+e.slide.swiper-slide
								video(loading="lazy" loop="loop" muted="muted" playsinline autobuffer)
									source(loading="lazy" src=`video/hype-${x}.webm`)
						- for(var x=1;x<6;x++)
							+slide(x)
		+e.video.d-block.d-lg-none
			video(loop="loop" muted="muted" autoplay playsinline )
				source(src="video/hype-2.webm")
		+e.wrap
			+e.caption.visible NET collection of&nbsp;2,222 unique 3D&nbsp;Hypers
			+e.block
				+soc
		//- .paper-bg
		//- 	img(src="img/paper-bg-up.png", alt="")
	// end headerBlock